<Window x:Class="Books2Gather.Views.BookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buch bearbeiten" Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Buch bearbeiten" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Titel:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Column="1" Text="{Binding Book.Title, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Text="ISBN:" Grid.Row="1" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Book.ISBN, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Text="Autor Vorname:" Grid.Row="2" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Book.Author.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Text="Autor Nachname:" Grid.Row="3" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Book.Author.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Text="Genre:" Grid.Row="4" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Book.Genre.Description, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Text="Veröffentlichung:" Grid.Row="5" VerticalAlignment="Center" Margin="0,5"/>
            <DatePicker Grid.Row="5" Grid.Column="1" SelectedDate="{Binding Book.PublishingDate, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Text="Preis (€):" Grid.Row="6" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Book.Prize, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Margin="5"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Speichern" Command="{Binding SaveCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Abbrechen" Command="{Binding CancelCommand}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
